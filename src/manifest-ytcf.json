{
  "manifest_version": 3,
  "name": "YtcFilter",
  "homepage_url": "https://livetl.app/en/ytcfilter/",
  "description": "YouTube Chat Filter",
  "version": "0.3.0",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "icons": {
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*",
        "https://studio.youtube.com/live_chat*",
        "https://studio.youtube.com/live_chat_replay*"
      ],
      "js": [
        "scripts/chat-injector.ts"
      ],
      "css": ["stylesheets/titlebar.css"],
      "all_frames": true
    },
    {
      "matches": [
        "https://www.youtube.com/live_chat?v=Lq9eqHDKJPE&ytcfilter=1&*"
      ],
      "js": [
        "scripts/chat-mounter.ts"
      ],
      "css": ["stylesheets/scrollbar.css", "stylesheets/page404.css"],
      "all_frames": true
    }
  ],
  "{{firefox}}.background": {
    "scripts": ["scripts/chat-background.ts"]
  },
  "{{chrome}}.background": {
    "service_worker": "scripts/chat-background.ts"
  },
  "action": {
    "default_icon": {
      "48": "assets/logo-48.png",
      "128": "assets/logo-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "*" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
